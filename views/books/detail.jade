extends ../layout
block content
    .container
        br
        form(action="/books/rating" method="POST") 
            input(type="hidden",name="bookId",value="#{book._id}")
            .row 
                .col-md-4
                    img(src='#{book.coverImagePath}' style="width:200px;height:200px")
                .col-md-8
                    h2 #{book.title}
                    h6 Publish Date : #{moment(book.publishDate).format('DD-MM-YYYY')}
                    hr
                    p #{book.description}
                    br
                    p(style="color:red") #{mess?mess:''}
                    .rating
                        input#star-1(type='radio' name='star' value='1')
                        input#star-2(type='radio' name='star' value='2')
                        input#star-3(type='radio' name='star' value='3')
                        input#star-4(type='radio' name='star' value='4')
                        input#star-5(type='radio' name='star' value='5')
                        label(for='star-1') ⭐
                        label(for='star-2') ⭐
                        label(for='star-3') ⭐
                        label(for='star-4') ⭐
                        label(for='star-5') ⭐
                    br
                    textarea.form-control(name='review' rows="9" placeholder='Write a review...' required)
                    br    
                    button.btn.btn-primary(type='submit') Rating  
                    a.btn.btn-danger.me-2(role="button" href='/')  Cancel

        br 
        .my-3.p-3.bg-body.rounded.shadow-sm
            h6.border-bottom.pb-2.mb-0 COMMUNITY REVIEWS
            each item in feedBacks
                .row 
                    .col-md-2 
                        img(src="/img/avatar.png" width="100" height="100")
                    .col-md-10 
                        h3 #{item.userName}
                        p Reate it: #{item.rating} ⭐
                        p #{item.review}