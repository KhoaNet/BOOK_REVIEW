extends ../layout
block content
    .container
        form(action='/books/new' method='POST').row.justify-content-md-center
            fieldset
                legend New Books
                    .row.mb-3
                        .col-md-6
                            label.form-label(for='Title') Title
                            input.form-control(type='text' placeholder='Title' name='title' )
                        .col-md-6
                            label.form-label(for='Title') Genres
                            select.form-select(aria-label='Default select example' name='gener' )
                             each item in geners
                                option(selected='' value="#{item._id}" name="genername"  ) #{item.genername}
                    .row.mb-3
                        .col-md-6
                            label.form-label(for='Publish Date') Publish Date
                            input.form-control(type='date' placeholder='Publish Date' name='publishDate' value="#{moment().format('YYYY-MM-DD')}" )
                        .col-md-6
                            label.form-label(for='Page Count') Page Count
                            input.form-control(type='number' min="1" placeholder='PageCount' name='pageCount' ) 
                    .row.mb-3
                        .col-md-6
                            label.form-label(for='Image') Image
                            input.form-control(type='file' min="1" name="image" class="filepond" required )        
                         .col-md-6
                            label.form-label(for='Description') Description
                            textarea.form-control( name='description' rows="39" )                  
                    .mb-3
                        <a href="/geners">Cancel</a>
                    button.btn.btn-primary(type='submit') Submit    